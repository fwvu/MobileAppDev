<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MobileAppDev" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/appGreen</item>
        <item name="colorPrimaryVariant">@color/appGreen</item>
        <item name="android:statusBarColor">@color/appGreen</item>
    </style>

    <style name="Theme.MobileAppDev" parent="Base.Theme.MobileAppDev" />

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/buttonYellow</item>
    </style>

    <style name="Theme.App.SplashScreen" parent="Base.Theme.MobileAppDev">
        <item name="windowSplashScreenBackground">@color/appGreen</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/person_24</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.MobileAppDev</item>

    </style>

</resources>